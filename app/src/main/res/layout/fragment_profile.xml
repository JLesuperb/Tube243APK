                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:hint="@string/first_name"
                    android:textColor="#000"
                    android:layout_height="wrap_content">

