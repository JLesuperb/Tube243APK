<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:clickable="true"
    android:alpha="0.9"
    android:id="@+id/tubeCardView"
    android:layout_marginBottom="16dp"
    android:focusable="true">

    <android.support.v7.widget.LinearLayoutCompat
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Product Image -->
        <android.support.v7.widget.AppCompatImageView
            android:src="@drawable/ic_album_cover"
            android:id="@+id/tubeImageView"
            android:transitionName="@string/tube_image_shared"
            android:layout_width="190dp"
            android:layout_height="140dp"
            android:scaleType="fitCenter"
            tools:ignore="UnusedAttribute" />

        <!-- Product Title -->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tubeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:src="@drawable/ic_action_eye"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitCenter"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/viewCounter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"/>

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.CardView>